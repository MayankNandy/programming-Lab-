#include <stdio.h>

int main() {
    int n1, n2, n3;

    printf("Enter three numbers: ");
    scanf("%d %d %d", &n1, &n2, &n3);

    // Ladder check: Check N1, then N2, then assume N3 is largest
    if (n1 >= n2 && n1 >= n3) {
        printf("%d is the greatest number.\n", n1);
    } else if (n2 >= n1 && n2 >= n3) {
        printf("%d is the greatest number.\n", n2);
    } else {
        // If n1 and n2 are not the greatest, n3 must be
        printf("%d is the greatest number.\n", n3);
    }

    return 0;
}
