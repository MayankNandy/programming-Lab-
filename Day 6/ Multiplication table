#include <stdio.h>

int main() {
    int num;
    int i; // Loop counter variable

    printf("Enter the number for the multiplication table: ");
    scanf("%d", &num);

    printf("Multiplication table for %d:\n", num);

    // Basic for loop to iterate from 1 to 10
    for (i = 1; i <= 10; i = i + 1) {
        int result = num * i;
        printf("%d x %d = %d\n", num, i, result);
    }

    return 0;
}
