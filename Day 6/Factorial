#include <stdio.h>

int main() {
    int num;
    int i;
    long long factorial = 1; // Use long long for larger results, start with 1

    printf("Enter a non-negative integer: ");
    scanf("%d", &num);

    if (num < 0) {
        printf("Factorial of a negative number is not defined.\n");
    } else {
        // Basic for loop to multiply from 1 up to num
        for (i = 1; i <= num; i = i + 1) {
            // Multiply the current factorial result by the loop counter (i)
            factorial = factorial * i;
        }

        printf("Factorial of %d is: %lld\n", num, factorial);
    }

    return 0;
}
