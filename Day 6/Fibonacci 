#include <stdio.h>

int main() {
    int n;
    int i;

    // Start with the first two terms
    int term1 = 0;
    int term2 = 1;
    int next_term;

    printf("Enter the number of terms (N) for Fibonacci series: ");
    scanf("%d", &n);

    printf("Fibonacci Series up to %d terms:\n", n);

    if (n >= 1) {
        printf("%d", term1); // Print the first term (0)
    }
    if (n >= 2) {
        printf(", %d", term2); // Print the second term (1)
    }

    // Start the loop from the 3rd term (i=3)
    for (i = 3; i <= n; i = i + 1) {
        next_term = term1 + term2;

        printf(", %d", next_term);

        // Update the terms for the next iteration (Shifting values)
        term1 = term2;
        term2 = next_term;
    }
    printf("\n");

    return 0;
}
