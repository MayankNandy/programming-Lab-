#include <stdio.h>

int main() {
    int start, end, i;

    printf("Enter the starting number of the range: ");
    scanf("%d", &start);
    printf("Enter the ending number of the range: ");
    scanf("%d", &end);

    printf("\n--- Positive Numbers ---\n");
    for (i = start; i <= end; i++) {
        if (i > 0) {
            printf("%d ", i);
        }
    }

    printf("\n\n--- Negative Numbers ---\n");
    for (i = start; i <= end; i++) {
        if (i < 0) {
            printf("%d ", i);
        }
    }

    printf("\n");
    return 0;
}
