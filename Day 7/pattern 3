#include <stdio.h>

int main() {

int i, j, rows = 5;

printf("--- Full Pyramid Star Pattern ---\n");

for (i = 1; i <= rows; i++) {

// Loop for printing leading spaces

for (j = i; j < rows; j++) { printf(" ");

}

// Loop for printing stars

for (j = 1; j <= (2* i -1); j++) {

printf("*");

}

printf("\n");

}

return 0;
}
